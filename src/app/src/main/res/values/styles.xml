<resources>

    <style name="AppTheme" parent="BaseAppTheme">

    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>

        <item name="android:windowBackground">@color/white</item>

        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>

        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/popup_background</item>
        <item name="android:dropDownHorizontalOffset">-8dp</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>

    <style name="Subtitle" parent="RobotoTextViewStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#818C99</item>
    </style>

    <style name="Title" parent="RobotoTextViewStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="RobotoTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="RobotoButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button" parent="RobotoButtonStyle">
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="ButtonReversed" parent="RobotoButtonStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/button_reversed</item>
    </style>

    <style name="toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="DialogTheme" parent="AppTheme">
<!--        <item name="android:windowNoTitle">true</item>-->
<!--        <item name="android:windowFullscreen">false</item>-->
<!--        <item name="android:windowIsFloating">false</item>-->
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
        <item name="android:inAnimation">@anim/slide_up</item>
        <item name="android:outAnimation">@anim/slide_down</item>
    </style>

    <style name="DialogAnim">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="title" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subtitle" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/subTitleText</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>



